<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_accent_bg"
    android:orientation="vertical"
    tools:context=".DashboardActivity"
    tools:ignore="TooManyViews">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/stilu_bold"
        android:padding="12dp"
        android:text="@string/app_name_full"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_card_bg"
        android:orientation="vertical"
        android:paddingVertical="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/stilu_bold"
            android:paddingVertical="16dp"
            android:text="@string/dash_banner"
            android:textColor="@color/card6"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/card1"
            app:cardCornerRadius="16dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="136dp"
                        android:layout_height="136dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="@color/card8"
                        app:cardCornerRadius="68dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/card8"
                            app:cardCornerRadius="64dp">

                            <ImageView
                                android:id="@+id/dash_avatar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_avatar_female"
                                tools:ignore="ContentDescription" />

                            <FrameLayout
                                android:id="@+id/dash_avatar_dimmer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:background="#C0000000" />

                            <ProgressBar
                                android:id="@+id/dash_avatar_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_gravity="center" />

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="@color/card2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/stilu_semi_bold"
                                android:text="@string/name_title"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/dash_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/card9"
                                tools:text="Surat Prakash Maurya"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="@color/card2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/stilu_semi_bold"
                                android:text="@string/gender_title"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/dash_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/card9"
                                tools:text="Female"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="@color/card2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/stilu_semi_bold"
                                android:text="@string/study_title"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/dash_study_branch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/card9"
                                tools:text="B.Tech (CSE)"/>

                            <TextView
                                android:id="@+id/dash_study_college"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/card9"
                                tools:text="Sanskriti University"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="@color/card2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/stilu_semi_bold"
                                android:text="@string/contact_title"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="@string/email_hint_text"/>

                                <TextView
                                    android:id="@+id/dash_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/card9"
                                    tools:text="spm.kvmrn@yahoo.com"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="@string/phone_hint_text"/>

                                <TextView
                                    android:id="@+id/dash_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/card9"
                                    tools:text="+918171247915"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="@color/card2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:fontFamily="@font/stilu_semi_bold"
                                android:text="@string/education_title"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="@string/_10th_hint_text"/>

                                <TextView
                                    android:id="@+id/dash_10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/card9"
                                    tools:text="100%"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="@string/_12th_hint_text"/>

                                <TextView
                                    android:id="@+id/dash_12"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/card9"
                                    tools:text="100%"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="@string/ug_percentage"/>

                                <TextView
                                    android:id="@+id/dash_ug"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/card9"
                                    tools:text="100%"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="@string/pg_percentage"/>

                                <TextView
                                    android:id="@+id/dash_pg"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/card9"
                                    tools:text="100%"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/card2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/stilu_semi_bold"
                                android:layout_marginBottom="2dp"
                                android:text="@string/internship_title"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="96dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="@string/opt_for"/>

                                <TextView
                                    android:id="@+id/dash_internship_opt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/card9"
                                    tools:text="Data Science"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="96dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="@string/location_hint_text"/>

                                <TextView
                                    android:id="@+id/dash_internship_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/card9"
                                    tools:text="Delhi"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="96dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="@string/internship_duration_text"/>

                                <TextView
                                    android:id="@+id/dash_internship_duration"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textColor="@color/card9"
                                    tools:text="4 Weeks"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/dash_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/logout_button_bg"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/stilu_bold"
            android:foreground="?android:selectableItemBackgroundBorderless"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:text="@string/logout_button_text"
            android:textColor="@color/button_text_color"
            android:textSize="14sp"
            tools:ignore="UnusedAttribute" />

    </LinearLayout>

</LinearLayout>