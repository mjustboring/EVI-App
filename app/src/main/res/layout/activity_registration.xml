<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_accent_bg"
    android:orientation="vertical"
    tools:context=".RegistrationActivity"
    tools:ignore="TooManyViews">

    <TextView
        android:id="@+id/reg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/stilu_bold"
        android:padding="12dp"
        android:text="@string/app_name_full"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/reg_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_card_bg"
        android:orientation="vertical"
        android:paddingVertical="16dp">

        <RelativeLayout
            android:id="@+id/reg_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp">

            <TextView
                android:id="@+id/reg_banner_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/stilu_semi_bold"
                android:text="@string/reg_banner_text_a"
                android:textColor="@color/card6"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reg_banner_a"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/stilu_semi_bold"
                    android:text="@string/reg_banner_text_b"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/stilu_semi_bold"
                    android:text="@string/reg_banner_text_c"
                    android:textColor="@color/card6"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/stilu_semi_bold"
                    android:text="@string/reg_banner_text_d"
                    android:textColor="@color/orange"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/stilu_semi_bold"
                    android:text="@string/reg_banner_text_e"
                    android:textColor="@color/card6"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/stilu_semi_bold"
                    android:text="@string/reg_banner_text_f"
                    android:textColor="@color/teal_700"
                    android:textSize="18sp" />

            </LinearLayout>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/reg_scroll_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/card1"
            app:cardCornerRadius="16dp">

            <ScrollView
                android:id="@+id/reg_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/reg_scroll_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <FrameLayout
                        android:layout_width="136dp"
                        android:layout_height="136dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="136dp"
                            android:layout_height="136dp"
                            app:cardBackgroundColor="@color/card8"
                            app:cardCornerRadius="68dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="128dp"
                                android:layout_height="128dp"
                                android:layout_gravity="center"
                                app:cardBackgroundColor="@color/card8"
                                app:cardCornerRadius="64dp">

                                <ImageView
                                        android:id="@+id/reg_avatar"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_avatar"
                                        tools:ignore="ContentDescription" />

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/reg_avatar_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:elevation="2dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_camera"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/stilu_semi_bold"
                            android:text="@string/name_title"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_asterisk"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/reg_first_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:errorIconDrawable="@null"
                        app:endIconMode="clear_text"
                        app:endIconDrawable="@drawable/ic_cancel"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:hintTextColor="@color/orange">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/reg_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="name"
                            android:backgroundTint="@color/card2"
                            android:hint="@string/first_name_hint_text"
                            android:inputType="textCapWords|textPersonName"
                            android:textCursorDrawable="@drawable/cursor" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/reg_last_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:errorIconDrawable="@null"
                        app:endIconMode="clear_text"
                        app:endIconDrawable="@drawable/ic_cancel"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        app:hintTextColor="@color/orange">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/reg_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="name"
                            android:backgroundTint="@color/card2"
                            android:hint="@string/last_name_hint_text"
                            android:inputType="textCapWords|textPersonName"
                            android:textCursorDrawable="@drawable/cursor" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/stilu_semi_bold"
                        android:text="@string/gender_title"
                        android:textSize="18sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/spinner_bg">

                        <Spinner
                            android:id="@+id/reg_gender"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:entries="@array/gender_entries"
                            android:paddingHorizontal="8dp" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/stilu_semi_bold"
                        android:text="@string/study_title"
                        android:textSize="18sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/reg_branch_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorIconDrawable="@null"
                            app:endIconMode="clear_text"
                            app:endIconDrawable="@drawable/ic_cancel"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:hintTextColor="@color/orange">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_branch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="@null"
                                android:backgroundTint="@color/card2"
                                android:hint="@string/branch_hint_text"
                                android:inputType="textCapWords"
                                android:textCursorDrawable="@drawable/cursor" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_asterisk"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/reg_college_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorIconDrawable="@null"
                            app:endIconMode="clear_text"
                            app:endIconDrawable="@drawable/ic_cancel"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:hintTextColor="@color/orange">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_college"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="@null"
                                android:backgroundTint="@color/card2"
                                android:hint="@string/college_hint_text"
                                android:inputType="textCapWords"
                                android:textCursorDrawable="@drawable/cursor" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_asterisk"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/stilu_semi_bold"
                        android:text="@string/contact_title"
                        android:textSize="18sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/reg_email_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorIconDrawable="@null"
                            app:endIconMode="clear_text"
                            app:endIconDrawable="@drawable/ic_cancel"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:hintTextColor="@color/orange">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="emailAddress"
                                android:backgroundTint="@color/card2"
                                android:hint="@string/email_hint_text"
                                android:inputType="textEmailAddress"
                                android:textCursorDrawable="@drawable/cursor" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_asterisk"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <com.hbb20.CountryCodePicker
                            android:id="@+id/reg_phone_ccp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            app:ccpDialog_textColor="@color/card6"
                            app:ccp_arrowColor="@color/orange"
                            app:ccp_contentColor="@color/card6"
                            app:ccp_textSize="16sp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/reg_phone_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                            app:errorIconDrawable="@null"
                            app:endIconMode="clear_text"
                            app:endIconDrawable="@drawable/ic_cancel"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                app:hintTextColor="@color/orange">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/reg_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="phone"
                                    android:backgroundTint="@color/card2"
                                    android:hint="@string/phone_hint_text"
                                    android:inputType="phone"
                                    android:textCursorDrawable="@drawable/cursor"
                                    tools:ignore="TooDeepLayout" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:src="@drawable/ic_asterisk"
                                tools:ignore="ContentDescription" />

                        </FrameLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/stilu_semi_bold"
                        android:text="@string/authentication_title"
                        android:textSize="18sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/reg_password_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorIconDrawable="@null"
                            app:passwordToggleEnabled="true"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:hintTextColor="@color/orange">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="password"
                                android:backgroundTint="@color/card2"
                                android:hint="@string/password_hint_text"
                                android:inputType="textPassword"
                                android:textCursorDrawable="@drawable/cursor" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_asterisk"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/reg_confirm_password_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:passwordToggleEnabled="true"
                            app:errorIconDrawable="@null"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:hintTextColor="@color/orange">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_confirm_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="password"
                                android:backgroundTint="@color/card2"
                                android:hint="@string/confirm_password_hint_text"
                                android:inputType="textPassword"
                                android:textCursorDrawable="@drawable/cursor" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_asterisk"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/stilu_semi_bold"
                        android:text="@string/education_title"
                        android:textSize="18sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/reg_10_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorIconDrawable="@null"
                            app:endIconMode="clear_text"
                            app:endIconDrawable="@drawable/ic_cancel"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:hintTextColor="@color/orange">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="@null"
                                android:backgroundTint="@color/card2"
                                android:hint="@string/_10th_hint_text"
                                android:inputType="numberDecimal"
                                android:textCursorDrawable="@drawable/cursor" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_asterisk"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/reg_12_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorIconDrawable="@null"
                            app:endIconMode="clear_text"
                            app:endIconDrawable="@drawable/ic_cancel"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:hintTextColor="@color/orange">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="@null"
                                android:backgroundTint="@color/card2"
                                android:hint="@string/_12th_hint_text"
                                android:inputType="numberDecimal"
                                android:textCursorDrawable="@drawable/cursor" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_asterisk"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/reg_ug_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorIconDrawable="@null"
                            app:endIconMode="clear_text"
                            app:endIconDrawable="@drawable/ic_cancel"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:hintTextColor="@color/orange">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_ug"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="@null"
                                android:backgroundTint="@color/card2"
                                android:hint="@string/ug_hint_text"
                                android:inputType="numberDecimal"
                                android:textCursorDrawable="@drawable/cursor" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_asterisk"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/reg_pg_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorIconDrawable="@null"
                            app:endIconMode="clear_text"
                            app:endIconDrawable="@drawable/ic_cancel"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:hintTextColor="@color/orange">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_pg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="@null"
                                android:backgroundTint="@color/card2"
                                android:hint="@string/pg_hint_text"
                                android:inputType="numberDecimal"
                                android:textCursorDrawable="@drawable/cursor" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/stilu_semi_bold"
                            android:text="@string/internship_title"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_asterisk"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/spinner_bg">

                        <Spinner
                            android:id="@+id/reg_internship"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:entries="@array/internship_entries"
                            android:paddingHorizontal="8dp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/reg_location_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:errorIconDrawable="@null"
                            app:endIconMode="clear_text"
                            app:endIconDrawable="@drawable/ic_cancel"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:hintTextColor="@color/orange">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/reg_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="@null"
                                android:backgroundTint="@color/card2"
                                android:hint="@string/location_hint_text"
                                android:inputType="textCapWords"
                                android:textCursorDrawable="@drawable/cursor" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_asterisk"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/stilu_semi_bold"
                            android:text="@string/internship_duration_title"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_asterisk"
                            tools:ignore="ContentDescription" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_bg">

                        <Spinner
                            android:id="@+id/reg_internship_duration"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:entries="@array/internship_duration_entries"
                            android:paddingHorizontal="8dp" />

                    </FrameLayout>

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reg_submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/submit_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/stilu_bold"
                android:foreground="?android:selectableItemBackgroundBorderless"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="@string/submit_button_text"
                android:textColor="@color/button_text_color"
                android:textSize="14sp"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/reg_reset_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/reset_button_bg"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/stilu_bold"
                android:foreground="?android:selectableItemBackgroundBorderless"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:text="@string/reset_button_text"
                android:textColor="@color/button_text_color"
                android:textSize="14sp"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>