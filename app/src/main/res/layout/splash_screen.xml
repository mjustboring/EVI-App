<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/splash_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logo_text_a"
        android:textSize="48sp"
        android:fontFamily="@font/stilu_bold"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/splash_text2"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/splash_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logo_text_b"
        android:textSize="24sp"
        android:fontFamily="@font/stilu_bold"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:layout_alignEnd="@id/splash_text1"
        android:textStyle="bold" />

</RelativeLayout>